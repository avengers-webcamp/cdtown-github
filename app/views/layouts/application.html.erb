<!DOCTYPE html>
<html>
  <head>
    <title>GithubWork</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <span>CDTOWN</span>


      <% if user_signed_in? %>

        <li><%= link_to " HOME", cds_path, class: "glyphicon glyphicon-home home" %></li>

        <li><%= link_to " MYPAGE", users_path, class: "glyphicon glyphicon-user users" %></li>

        <li><%= link_to " LOGOUT" ,destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %></li>


      <% else %>

        <li><%= link_to " Home", cds_path, class: "glyphicon glyphicon-home home" %></li>

        <li><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit signup" %></li>

        <li><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-out logout" %></li>

      <% end %>
     </ul>
   </div>
  </header>

    <%= yield %>
  </body>
</html>
