<div class="container">
 <div class="row">
  <div class="col-md-12">
  <h2>MyPage</h2>

  <%= form_for @user do |f| %>

   <div class="row">
   	<table>
   	 <tr>
   	 	<th>名前（姓名）</th>
   	 </tr>
   	 <tr>
        <th><%= f.text_field :last_name, class:"form-control" %></th>
        <th><%= f.text_field :first_name, class:"form-control" %></th>
     </tr>
     </table>
     <table>
   	 <tr>
   	 	<th>電話番号</th>
   	 </tr>
   	 <tr>
        <th><%=f.text_field :phone_number, class:"form-control" %></th>
     </tr>
     </table>
   </div>

   <div class="row">
     <table>
   	 <tr>
   	 	<th>名前（カナ）</th>
   	 </tr>
   	 <tr>
        <th><%= f.text_field :last_name_kana, class:"form-control" %></th>
        <th><%= f.text_field :last_name_kana, class:"form-control" %></th>
     </tr>
     </table>
     <table>
   	 <tr>
   	 	<th>Email</th>
   	 </tr>
   	 <tr>
        <th><%= f.text_field :email, class:"form-control" %></th>
     </tr>
     </table>
   </div>

   <div class="row">
   	<table>
   	 <tr>
   	 	<th>住所</th>
   	 </tr>
   	 <tr>
   	     <th>郵便番号</th>
   	 </tr>
     <tr>
        <th><%=f.text_field :post_front, class:"form-control" %></th>
        <th><%=f.text_field :post_back, class:"form-control" %></th>
     </tr>
     </table>
   </div>

   <div class="row">
   	<table>
   	 <tr>
   	     <th>都道府県</th>
   	 </tr>
     <tr>
        <th><%=f.text_field :prefecture, class:"form-control" %></th>
     </tr>
     </table>
     <table>
   	 <tr>
   	     <th>市町村</th>
   	 </tr>
     <tr>
        <th><%=f.text_field :town, class:"form-control" %></th>
     </tr>
     </table>
   </div>

   <div class="row">
   	<table>
   	 <tr>
   	     <th>番地</th>
   	 </tr>
     <tr>
        <th><%=f.text_field :post_number, class:"form-control" %></th>
     </tr>
     </table>
     <table>
   	 <tr>
   	     <th>マンション名</th>
   	 </tr>
     <tr>
        <th><%=f.text_field :condo, class:"form-control" %></th>
     </tr>
     </table>
   </div>
  <% end %>

    <div class="row">
     <table>
      <tr>
       <th><%= link_to "購入履歴", orders_path,class:"btn btn-outline-primary Primary btn-sm" %></th>
       <th><%= link_to " 編集 ", edit_user_path(@user),class:"btn btn-outline-success Edit btn-sm" %></th>
       <th><%= link_to "退会申請",  unsubscribe_path(@user),class:"btn btn-outline-danger Destroy_book btn-sm" %></th>
      </tr>
     </table>
    </div>
  </div>


 </div>
</div>
