<div class="container">
   <h1>商品一覧</h1>

     <table class="table table-striped">
      <thead>
          <tr>
            <th><P>ジャケット画像</P></th>
            <th><P>商品名</P></th>
            <th><P>価格（税別）</P></th>
            <th><P>購入数</P></th>
            <th><P>詳細</P></th>
            <th><P></P></th>
          </tr>
      </thead>
      <tbody>

           <% @cds.each do |cd| %>
            <tr class="new-table">
              <td><span><%= attachment_image_tag cd, :jacket_image, :fill, 50, 50, format: 'jpeg' %></span></td>
              <td><span><%= cd.name %></span></td>
              <td><span><%= cd.price %></span></td>
              <td><span><%= cd.stock %></span></td>
              <td><span><%= link_to '詳細', cd_path(cd.id) %></span></td>
              <%= form_for @user_cd, url: user_cds_path(cd_id: cd.id), method: :post do |cart| %>
              <td><span><%= cart.number_field :disc_count %></span></td>
              <td><span><%= cart.submit "カートに入れる" %></span></td>
              <% end %>
            </tr>
           <% end %>

       </tbody>
     </table>
</div>
