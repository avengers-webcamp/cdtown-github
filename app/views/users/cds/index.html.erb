<div class="container clearfix">
 <div class="user_cd_index">

          <% @cds.each do |cd| %>

          <div class="cd">
              <p><span><%= attachment_image_tag cd, :jacket_image, :fill, 180, 180, format: 'jpeg' %></span></p>
            <div class="user_cd_index_cdname">
              <p><span><%= cd.name %></span></p>
            </div>
            <div class="user_cd_index_cdprice">
              <p><span>¥ <%= cd.price %> (税抜)</span></p>
            </div>
            <div class="cart_show">
              <p><span><%= link_to '詳細', cd_path(cd.id),class:"btn-sm btn-light btn-lg" %></span></p>
            </div>


            <% if cd.status == "販売停止中" %>
             <div class="user_index_cart_count">
                <div class="user_index_count">ただいま、品切れ中です。　</div>
                </div>
             </div>

            <% else %>

              <%= form_for @user_cd, url: user_cds_path, method: :post do |cart| %>
              <div class="user_index_cart_count">
                <div class="row">
                  <div class="col-md-4">
                    <div class="user_index_count"><span><%= cart.number_field :disc_count, value: 1 , min: 1, max:10,  class:"form-control"%></span></div>
                    <%= cart.hidden_field :cd_id, value: cd.id %>
                  </div>
                    <div class="col-md-8">
                      <div class="incart"><span><%= cart.submit "カートに入れる", class:"btn-sm btn-primary " %></span></div>
                    </div>
                </div>
              </div>
            <% end %>
          </div>
              <% end %>

          <% end %>



 </div>
</div>
