



<div class="container">
   <h2>Payment</h2>

     <table class="table table-striped">
      <thead>
          <tr>
            <th><P>ジャケット画像</P></th>
            <th><P>商品名</P></th>
            <th><P>価格（税別）</P></th>
            <th><P></P></th>
            <th><P></P></th>
            <th><P>購入数</P></th>
            <th><P></P></th>
            <th><P></P></th>
          </tr>
      </thead>
      <tbody>


           <% x = 0 %>
           <% y = 0 %>
           <% @cart.each do |cart| %>
            <tr class="new-table">
              <td><span><%= attachment_image_tag cart.cd, :jacket_image, :fill, 50, 50, format: 'jpeg' %></span></td>
              <td><span><%= cart.cd.name %></span></td>
              <td><span><%= cart.cd.price %></span></td>
              <td><span><%= cart.cd.stock %></span></td>
              <td><span><%= link_to '詳細', cd_path(cart.cd.id), class:"btn-sm btn-light Destroy_book btn-lg" %></span></td>
              <td><span><%= cart.disc_count%></span></td>
            </tr>

            <% x = x.to_i + cart.disc_count.to_i %>
            <% y = y.to_i + cart.cd.price.to_i %>

           <% end %>


:total_price, :count, :price, :tax, :disc_count

       </tbody>
     </table>

    <p>合計枚数　<%= x %></p>
    <P><%= o.hidden_field :postage, value: "500" %>送料    ¥500</P>
    <p><%= o.hidden_field :total_price, value: y %>合計金額　　　　¥<%= y %></p>

  <div class="row">
    <div class="col-xs-5">

        <% ["クレジットカード払い","銀行振り込み","代引き"].each do |pay| %>
            <p><label><%=o.radio_button :payment, pay %><%= pay %></label></p>
        <% end %>
    </div>

    <div class="col-xs-7">

    <p><%= radio_button_tag :deli, "user" %>


       <%= @user.last_name %><%= @user.first_name %></p>

    <p><%= @user.post_front %><%= @user.post_back %></p>

    <p><%= @user.prefecture %><%= @user.town %><%= @user.post_number %><%= @user.condo %></p>



    <% @deliver_addresses.each do |address| %>

        <p><%= radio_button_tag :deli, address.id %>

           <%= address.deliver_post_front %><%= address.deliver_post_back %></p>

        <p><%= address.deliver_prefecture %><%= address.deliver_town %><%= address.deliver_post_number %><%= address.deliver_condo %></p>

    <% end %>

    </div>
  </div>

    <tr>
		<th>
            <%= o.label :配達日 %>
        </th>
        <th>
            <%= o.datetime_select :shipping_day %>
        </th>
    </tr>

<%= o.hidden_field :shipping_status, value: 1 %>

<%= o.submit %>

<% end %>

<%= button_to('新しく配送先を登録する',new_user_deliver_address_path) %>

</div>

