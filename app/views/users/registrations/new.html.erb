<div class="container">
 <div class="row">
  <div class="col-md-12">


    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <table>
          <tr>
            <th>名前</th>
          </tr>
          <tr>
            <th><%= f.label :姓 %></th>
            <th><%= f.label :名 %></th>
          </tr>
          <tr>
            <th><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
            <th><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
          </th>
        </table>

        <table>
          <tr>
            <th>名前(カナ)</th>
          </tr>
          <tr>
            <th><%= f.label :セイ　%></th>
            <th><%= f.label :メイ %></th>
          </tr>
          <tr>
            <th><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"form-control" %>
            <th><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %>
          </th>
        </table>

        <table>
          <tr>
            <th>郵便番号</th>
          </tr>
          <tr>
            <th><%= f.text_field :post_front, autofocus: true, autocomplete: "post_front", class:"form-control" %>
            <th><%= f.text_field :post_back, autofocus: true, autocomplete: "post_back", class:"form-control" %>
          </tr>
        </table>

        <table>
          <tr>
            <th>住所</th>
          </tr>
          <tr>
            <th><%= f.label :都道府県　%></th>
          </tr>
          <tr>
            <th><%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture", class:"form-control" %>
          </tr>
        </table>

        <table>
          <tr>
            <th><%= f.label :市町村　%></th>
          </tr>
          <tr>
            <th><%= f.text_field :town, autofocus: true, autocomplete: "town", class:"form-control" %>
          </tr>
        </table>

        <table>
          <tr>
            <th><%= f.label :番地　%></th>
            <th><%= f.label :マンション名 %></th>
          </tr>
          <tr>
            <th><%= f.text_field :post_number, autofocus: true, autocomplete: "post_number", class:"form-control" %>
            <th><%= f.text_field :condo, autofocus: true, autocomplete: "condo", class:"form-control" %>
          </th>
        </table>

         <table>
          <tr>
            <th><%= f.label :電話番号　%></th>
          </tr>
          <tr>
            <th><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control" %>
          </tr>
        </table>

        <table>
         <tr>
           <th><%= f.label :email %></th>
         </tr>
         <tr>
           <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></th>
         </tr>
        </table>

        <table>
         <tr>
           <th><%= f.label :password %></th>
         </tr>
         <tr>
           <th><% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
           </th>
         </tr>
        </table>

        <table>
           <th><%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
           </th>
        </table>

        <table>
         <tr>
           <th><%= f.submit "Sign up",class:"btn btn-outline-primary Primary btn-sm"%></th>
         </tr>
        </table>

    <% end %>

    <%= render "users/shared/links" %>

  </div>
 </div>
</div>
