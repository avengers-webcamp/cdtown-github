



<div class="container">
   <h1>カートの中身</h1>

     <table class="table table-striped">
      <thead>
          <tr>
            <th><P>ジャケット画像</P></th>
            <th><P>商品名</P></th>
            <th><P>価格（税別）</P></th>
            <th><P>購入数</P></th>
            <th><P>詳細</P></th>
            <th><P></P></th>
          </tr>
      </thead>
      <tbody>


           <% @cart.each do |cart| %>
            <tr class="new-table">
              <td><span><%= attachment_image_tag cart.cd, :jacket_image, :fill, 50, 50, format: 'jpeg' %></span></td>
              <td><span><%= cart.cd.name %></span></td>
              <td><span><%= cart.cd.price %></span></td>
              <td><span><%= cart.cd.stock %></span></td>
              <td><span><%= link_to '詳細', cd_path(cart.cd.id) %></span></td>
              <%= form_for cart, url: user_cds_path(cd_id: cart.cd.id), method: :post do |carting| %>
              <td><span><%= carting.number_field :disc_count %></span></td>
              <td><span><%= carting.submit "カートに入れる" %></span></td>
              <% end %>
            </tr>
           <% end %>

       </tbody>
     </table>
</div>
