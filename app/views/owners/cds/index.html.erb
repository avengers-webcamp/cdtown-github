<div class="container clearfix">
 <div class="user_cd_index">
   <div class="row">
    <div class="owner_cds_index">
     <%=link_to '商品登録', new_owners_cd_path, class:"btn-lg btn-primary " %>
    </div>
   </div>

          <% @cds.each do |cd| %>

          <div class="cd">
              <p><span><%= attachment_image_tag cd, :jacket_image, :fill, 180, 180, format: 'jpeg' %></span></p>
            <div class="user_cd_index_cdname">
              <p><span><%= cd.name %></span></p>
            </div>
            <div class="user_cd_index_cdprice">
              <p><span>¥ <%= cd.price %> (税抜)</span></p>
            </div>
           <div class="row">
            <div class="col-md-6">
              <div class="cd_stock_index">
                <p><span><%= cd.stock %> 枚</span></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="cart_show">
                <p><span><%= link_to '詳細', owners_cd_path(cd.id),class:"btn-sm btn-light btn-lg" %></span></p>
            <div class="row">
                <p><span><%=link_to '入荷登録', new_owners_cd_arrival_path(cd.id),class:"btn-sm btn-light btn-lg" %></span></p>
            </div>
             <div class="row">
                <p><span><%=link_to '入荷履歴', owners_cd_arrivals_path(cd.id),class:"btn-sm btn-light btn-lg" %></span></p></div>
              </div>
            </div>
           </div>
          </div>

          <% end %>
 </div>
</div>
