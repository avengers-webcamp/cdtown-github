<div class="container">
 <div class="row">
 	     <div class="col-lg-5" style="background-color: white">
 	     	<div class="label">ジャケット画像</div>
            <%= attachment_image_tag @cd, :jacket_image, fallback: "no_cd_image.jpg", size:"200x200" %>

            <div></div>
            <div class="label">ステータス（販売中・販売停止中）</div>
            <%= @cd.status %>

            <div></div>
            <div class="label">価格（税別）</div>
            <%= @cd.price %>
         </div>

         <div class="col-lg-7" style="background-color: white">
	          <div></div>
	          <div class="label">アーティスト名</div>
	          <%= @artists[0]['name'] %>

	          <div></div>
	          <div class="label">シングル／アルバム名</div>
	          <%= @cd.name %>

	          <div></div>
	          <div class="label">発売日</div>
	          <%= @cd.released_at %>

	          <div></div>
	          <div class="label">ジャンル名</div>
	          <%= @genres[0]['name'] %>

	          <div></div>
	          <div class="label">レーベル名</div>
	          <%= @labels[0]['name'] %>
	     </div>
  </div>
 </div>

<div>
</div>
 <div class="container">
	 <div class="row">
	     <table>
		      <tbody>
	            <% @cd.discs.order(:disc_count).each do |disc| %>
	             <td><span><%= disc.disc_count %></span></td>
	            	<% disc.songs.order(:order).each do |song| %>
	             		<tr class="table table-striped">
	              			<td><span><%= song.name %></span></td>
	             		</tr>
	            	<% end %>
	            <% end %>
	          </tbody>
	       </table>
     </div>
 </div>

<div class="container">
	 <div class="row">
          <h2></h2>
          <%= button_to('この商品の入荷登録画面へ', new_owners_cd_arrival_path(@cd.id), method: :get) %>

          <h2></h2>
          <%= button_to('編集',edit_owners_cd_path(@cd.id), method: :get) %>
          <%= button_to('削除',owners_cd_path(@cd.id), method: :delete) %>

     </div>
</div>