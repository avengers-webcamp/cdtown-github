<div class="container clearfix">

    <%= form_for @cd, url: owners_cd_path(@cd.id) do |cd| %>
    <%= render 'layouts/error_messages', cd: cd.object %>
      <div class="row">

              <div class="col-md-4">
                <%= attachment_image_tag @cd, :jacket_image, fallback: "no_cd_image.jpg", size:"300x300" %>
                <div class="owner_cd_new_image"><%= cd.attachment_field :jacket_image, placeholder: "プロフィール画像" %></div>
                <div class="owner_cd_new_status"><%= cd.label :ステータス（販売中・販売停止中） %></div>
                <div class="owner_cd_new_status_name"><%= cd.select :status, Cd.statuses.keys.to_a %></div>
              </div>

              <div class="col-md-4">
                <div class="owner_cd_new_single"><%= cd.label :シングルアルバム名 %><br></div>
                <div class="owner_cd_new_single_name"><%= cd.text_field :name %><br></div>
                <div class="owner_cd_new_artist"><%= cd.label :アーティスト名 %><br></div>
                <div class="owner_cd_new_artist_name"><%= cd.select :artist_id, Artist.all.map{|o| [o.name, o.id]} %><br></div>
                <div class="owner_cd_new_genre"><%= cd.label :ジャンル名 %><br></div>
                <div class="owner_cd_new_genre_name"><%= cd.select :genre_id, Genre.all.map{|o| [o.name, o.id]} %><br></div>
                <div class="owner_cd_new_label"><%= cd.label :レーベル名 %><br></div>
                <div class="owner_cd_new_label_name"><%= cd.select :label_id, Label.all.map{|o| [o.name, o.id]} %><br></div>
                <div class="owner_cd_new_release"><%= cd.label :発売日 %><br></div>
                <div class="owner_cd_new_release_day"><%= cd.date_field :released_at %><br></div>
                <div class="owner_cd_new_price"><%= cd.label :価格（税別） %><br></div>
                <div class="owner_cd_new_price_price"><%= cd.text_field :price %><br></div>
              </div>

              <div class="col-md-4">
                <div class="owner_cd_new_form"><%= render 'form', cd: @cd %><br></div>
                <div class="owner_cd_new_create"><%= cd.submit "update", class:"btn-lg btn-info "%></div>
              </div>


      </div>

    <% end %>


</div>